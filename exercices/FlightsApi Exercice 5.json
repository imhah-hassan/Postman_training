{
	"info": {
		"_postman_id": "7265636c-ed68-47a5-aa2c-0038d3dd5a65",
		"name": "FlightsApi Exercice 5",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
